    {  
        type            fixedValue;
        value           uniform 0; 
     }

    bottomWall
    {
	type		fixedValue;
	value		uniform 0;
    }
*/
    dirichletBoundary
    {
	type		fixedValue;
	value		uniform 0;
    }

    backAndFront           
    {
        type            empty;
    }
}
